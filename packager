#! /usr/bin/env php

<?php

use Packager\Commands\Bootstrap\FetchBootstrapConfigCommand;
use Packager\Commands\Bootstrap\MakeBootstrapConfigCommand;
use Packager\Commands\Bootstrap\ShowBootstrapsListCommand;
use Packager\Commands\SetupCommand;
use Packager\Commands\NewPackageCommand;
use Symfony\Component\Console\Application;

require 'vendor/autoload.php';

$app = new Application( "Package development wrapper", "0.0" );

$app->add( new SetupCommand() );
$app->add( new NewPackageCommand() );
$app->add( new FetchBootstrapConfigCommand() );
$app->add( new MakeBootstrapConfigCommand() );
$app->add( new ShowBootstrapsListCommand() );

$app->run();